<?xml version="1.0" encoding="utf-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:views="clr-namespace:OWWC.MULTI.Views" x:Class="OWWC.MULTI.Views.OpeningPage">
    <TabbedPage.Children>
        <NavigationPage Title="World Cup">
            <NavigationPage.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="iOS" Value="owwc.png" />
                </OnPlatform>
            </NavigationPage.Icon>
            <x:Arguments>
                <views:WorldcupPage />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Schedule">
            <NavigationPage.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="iOS" Value="tab_about.png" />
                </OnPlatform>
            </NavigationPage.Icon>
            <x:Arguments>
                <views:SchedulePage />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Standings">
            <NavigationPage.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="iOS" Value="tab_standings.png" />
                </OnPlatform>
            </NavigationPage.Icon>
            <x:Arguments>
                <views:StandingsPage />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>